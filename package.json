{
  "name": "redux-intl-connect",
  "version": "2.3.1",
  "description": "Redux connect-agnostic library providing i18n and ICU Message Syntax support (Ember, Preact, React etc)",
  "scripts": {
    "bump": "lerna publish --skip-git --skip-npm --cd-version",
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf coverage lerna-debug.log && lerna run clean",
    "lint": "eslint --ext js src",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeojz/redux-intl-connect.git"
  },
  "keywords": [
    "format",
    "formatmessage",
    "formatting",
    "globalization",
    "i18n",
    "internationalization",
    "intl",
    "local",
    "localization",
    "preact",
    "react",
    "reactjs",
    "translate",
    "translation"
  ],
  "author": "Gerald Yeo <gerald@fusedthought.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/yeojz/redux-intl-connect/issues"
  },
  "homepage": "https://github.com/yeojz/redux-intl-connect#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.18.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.13.1",
    "lerna": "^2.0.0",
    "rimraf": "^2.6.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/scripts/*"
    ],
    "modulePaths": [
      "<rootDir>/packages/"
    ],
    "resetMocks": true,
    "setupFiles": [],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/scripts/*",
      "<rootDir>/tests/"
    ]
  }
}
